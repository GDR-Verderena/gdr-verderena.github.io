---
layout: null
---
{
    "version": "https://jsonfeed.org/version/1",
    "title": "{{ site.title | xml_escape }}",
    "description": {{ site.description | jsonify }},
    "home_page_url": "{{ "/" | absolute_url }}",
    "feed_url": "{{ "/feed.json" | absolute_url }}",
    "user_comment": "This feed allows you to read the posts from this site in any feed reader that supports the JSON Feed format.",
    "items": [{% for post in site.posts  %}
        {
            "id": "{{ post.url | absolute_url }}",
            "url": "{{ post.url | absolute_url }}",
            "title": {{ post.title | jsonify }},
            "description": "{{ post.description  }}",
            "content_html": {{ post.content | jsonify }},
            "content_raw": {{post.content | | strip_html}},
              
            "date_published": "{{ post.date | date_to_xmlschema }}",
            "author": "{{ post.author  }}",
            "featured-image": "{{ post.featured-image }}",
            "tags": {{ post.tags | jsonify }},
            "excerpt": "{{ post.excerpt | strip_html | strip_newlines | truncate: 156  }}"
              
        }{% unless forloop.last %},{% endunless %}{% endfor %}
    ]
}


